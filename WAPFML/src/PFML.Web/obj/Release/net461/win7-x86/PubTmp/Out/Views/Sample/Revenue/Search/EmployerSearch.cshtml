@using (Form())
{
	@using (Panel(headingText: "Search", stateFilter: "Search,Results"))
	{
		@TextBox(labelText: "Employer Name", dataSource: "Name")
	}
	@using (ButtonGroup(stateFilter: "Search,Results"))
	{
		@Button(transition: "Search")
		@Button(transition: "Reset")
		@Button(transition: "New")
	}

	<br />
	@using (Panel(headingText: "Results", stateFilter: "Results"))
	{
		@using (DataTable(dataSource: "Employer", labelColumns: 0, controlColumns: 12, dataTableHeight: DataTableHeight.Full, recordCountInfo: false))
		{
			@DataTableColumn(columnName: "ID", dataSource: "ID", transition: "Next", targetDataSource: "Employer")
			@DataTableColumn(columnName: "Name", dataSource: "Name")
			@DataTableColumn(columnName: "AccountNumber", dataSource: "AccountNumber")
			@DataTableColumn(columnName: "AccountProfile", dataSource: "AccountProfile")
		}
	}
	@using (Panel(headingText: "View & Edit Employer Profile Information", panelLayout: PanelLayout.Stacked))
	{


		@using (Panel(headingText: "Employer Information", stateFilter: "EmployerProfile", panelLayout: PanelLayout.Grid, defaultLabelColumns: 3, defaultControlColumns: 3, borderVisible: true, cssClass: "border-style: dotted;"))
		{
			@Data(labelText: "Employer Account Number", dataSource: "Employer[0].AccountNumber")
			@Data(labelText: "Employer Name", dataSource: "Employer[0].Name")
		}
		@using (Panel(headingText: "Account Profile", stateFilter: "EmployerProfile", panelLayout: PanelLayout.Grid, defaultLabelColumns: 6, defaultControlColumns: 3))
		{
			@Data(labelText: "", dataSource: "Employer[0].AccountProfile")
		}
		@using (Panel(headingText: "Employer Account Identification Information", stateFilter: "EmployerProfile", panelLayout: PanelLayout.Grid, defaultLabelColumns: 3, defaultControlColumns: 3))
		{

			@Data(labelText: "EAN", dataSource: "Employer[0].EAN")
			@TextBox(labelText: "FEIN", dataSource: "Employer[0].FEIN")
		}
		@using (Panel(headingText: "Employer Account Liability Information", stateFilter: "EmployerProfile", panelLayout: PanelLayout.Grid, defaultLabelColumns: 3, defaultControlColumns: 3))
		{

			@Data(labelText: "Liability Date", dataSource: "Employer[0].LiabilityDate")
			@Data(labelText: "Date Liability Incurred", dataSource: "Employer[0].LiabilityIncurred", formatter: Formatter.Date)
			@Data(labelText: "Payment Method Type", dataSource: "Employer[0].PaymentMethodType")
			@Data(labelText: "Change of Payment Method", dataSource: "Employer[0].ChangePaymentMethod", formatter: Formatter.TextAlpha)
			@Data(labelText: "History Transfer", dataSource: "Employer[0].HistoryTransfer")
			@Data(labelText: "Successor", dataSource: "Employer[0].Successor")
			@Data(labelText: "Initiated Existing Self Service", dataSource: "Employer[0].InitiatedExistingSelfService")
			@Data(labelText: "Initiated for Wage Claim", dataSource: "Employer[0].InitiatedForWageClaim")
			@TextBox(labelText: "NMPRC", dataSource: "Employer[0].NMPRC")
			@TextBox(labelText: "CRS", dataSource: "Employer[0].CRS")



		}
		@using (Panel(borderVisible: false, panelLayout: PanelLayout.Inline, cssClass: "text-center"))
		{

			@Button(text: "Previous", transition: "Previous")
			@Button(text: "Save")

		}

	}

}